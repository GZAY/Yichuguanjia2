<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="RtlCompat">
    <ImageView
        android:id="@+id/check_box"
        android:src="@mipmap/ic_uncheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_edge2"
        android:padding="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/clothesImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/t_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="品牌"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/clothesImage"/>
            <TextView
                android:id="@+id/e_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Adidas"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_brand"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/t_brand"/>

            <TextView
                android:id="@+id/t_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="类型"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/e_brand"/>
            <TextView
                android:id="@+id/e_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="上衣"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_brand"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/t_type"/>

            <TextView
                android:id="@+id/t_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="季节"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/clothesImage"/>
            <TextView
                android:id="@+id/e_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="春"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_season"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/t_season"/>

            <TextView
                android:id="@+id/t_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="颜色"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/e_season"/>
            <TextView
                android:id="@+id/e_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="红"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_season"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/t_color"/>

            <TextView
                android:id="@+id/t_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="尺寸"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/e_color"/>
            <TextView
                android:id="@+id/e_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="L"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_season"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/t_size"/>

            <TextView
                android:id="@+id/t_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="适合场景"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="65dp"
                android:layout_toRightOf="@+id/clothesImage"/>
            <TextView
                android:id="@+id/e_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="工作"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/t_scene"
                android:layout_marginTop="65dp"
                android:layout_toRightOf="@+id/t_scene"/>

            <TextView
                android:id="@+id/clothesTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-10-1 11:30"
                android:textColor="#676565"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:background="@android:color/background_light"
        android:layout_marginLeft="-5dp">

        <RelativeLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cm_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="分类"
                android:textColor="#000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/clothes_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/add"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="TODO" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#FF5252">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="24dp"
                    android:layout_toEndOf="@+id/header_image"
                    android:text="孩子基本信息"
                    android:textColor="#FFF"
                    android:textSize="20sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/header_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/child_icon"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="89dp"
                    android:layout_toEndOf="@+id/header_image"
                    android:text="年龄："
                    android:textColor="#FFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="77dp"
                    android:layout_toEndOf="@+id/header_image"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:theme="@style/MyEditText"/>

                <EditText
                    android:id="@+id/textView4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="44dp"
                    android:layout_toEndOf="@+id/header_image"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:theme="@style/MyEditText"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="58dp"
                    android:layout_toEndOf="@+id/header_image"
                    android:text="姓名："
                    android:textColor="#FFF"
                    android:textSize="20sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-12dp"
                        android:paddingTop="-5dp"
                        android:paddingBottom="-10dp"
                        android:hint="0"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="身高"
                        android:textSize="16sp"
                        android:textColor="#000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item2"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:paddingTop="-5dp"
                        android:paddingBottom="-10dp"
                        android:layout_marginTop="-12dp"
                        android:hint="0"
                        android:textColor="#000000"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="体重"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item3"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:paddingTop="-5dp"
                        android:paddingBottom="-10dp"
                        android:layout_marginTop="-12dp"
                        android:hint="0"
                        android:textColor="#000000"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="胸围"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item4"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"
                        android:paddingTop="-5dp"
                        android:paddingBottom="-10dp"
                        android:layout_marginTop="-12dp"
                        android:hint="0"
                        android:textColor="#000000"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/item4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="肩宽"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="3"
        android:focusable="true"
        android:focusableInTouchMode="true">
    </GridView>

</LinearLayout>